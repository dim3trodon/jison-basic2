/* description: Basic grammar that contains a nullable A nonterminal. */

//Modificar para que reconozca id = NUM; id = NUM; id = NUM;

%lex
%%

\s+               {/* skip whitespace */}
[a-zA-Z_]\w*      {return 'x';}

/lex

%%

S   : A
           { return $1+" identifiers"; } //Esto es retornado por el párser, retorna el número de identificadores
    ;
A   : /* empty */  
           { 
              console.log("starting"); 
              $$ = 0;  //no hay ninguna x, el atributo asociado es 0
           }
    | A x  { 
              $$ = $1 + 1;  //Se ejecuta este código al ocurrir esta regla de producción
              //$1 es el primer elemento de la producción, $$ el de la izquierda
							//$$ lo pone como atributo de $1 = A + 1
							//el árbol se lee de izquierda a derecha
              console.log($$)
           }
    ;

